@model List<Models.User.ApplicationUser>
@{
  ViewData["Title"] = "Home Page";
}

<div class="container py-5">
  <div class="row text-center text-white mb-5">
    <div class="col-lg-7 mx-auto title">
      <h1 class="display-4">Profissionais Disponíveis</h1>
      <a><i class="fas fa-briefcase"></i></a>
    </div>
  </div>

  <table class="table table-dark">
    <thead>
      <tr>
        <th scope="col">Nome</th>
        <th scope="col">Email</th>
        <th scope="col">Phone</th>
        <th scope="col">Serviços</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var item in Model.Take(20))
      {
        <tr>
          <td>@item.Name</td>
          <td>@item.Email</td>
          <td>@item.Phone</td>
          <td>@(item.Services?.Any() ?? false ? string.Join(", ", item.Services.Select(x => x)) : "Nenhum serviço informado")</td>
        </tr>
      }
    </tbody>
  </table>
</div>