@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}
@section Styles {
    <link type="text/css; charset=utf-8" rel="stylesheet" href="~/css/account/account.css" />
    <link type="text/css; charset=utf-8" rel="stylesheet" href="~/css/account/manage/login.css" />
}
<div class="bg-login">
    <img src="~/assets/images/png/banner-login.jpeg" alt="banner de login">
    <div class="login-content">
        <form method="post">
            <i class="fas fa-user-lock cfc icon-top"></i>
            <h4 class="cfc text-center">Entre com o seu usuário e senha:</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email" class="cfc"></label>
                <input asp-for="Input.Email" class="input-default row100" placeholder="Digite o seu Email" />
                <span asp-validation-for="Input.Email" class="danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password" class="cfc"></label>
                <input asp-for="Input.Password" class="input-default row100" placeholder="Digite a sua Senha" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.RememberMe" class="cfc bold">
                    <input asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
            <div class="form-group">
                <label><a asp-page="./ForgotPassword" class="cfc"><i class="fas fa-key cfc"></i>Esqueci minha Senha</a></label>
            </div>
            <div class="form-group">
                <label><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="cfc"><i class="fas fa-user cfc"></i>Ainda não tenho uma conta</a></label>
            </div>
            <div class="form-group">
                <button type="submit" class="default-button row100">Entrar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
